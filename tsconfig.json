{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "ts-build",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
}
